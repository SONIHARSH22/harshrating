    function getStoredCity() {
        return localStorage.getItem('storedCity') || 'mandvi';
    }

    // Function to set city in localStorage when form is submitted
    document.querySelector('form').addEventListener('submit', function (event) {
        var cityInput = document.getElementById('cityInput');
        localStorage.setItem('storedCity', cityInput.value);
    });
</script>

<script>
    function redirectToDetail(storeId) {
        // Redirect to the detail page with the storeId as a parameter
        window.location.href = '/showdetial?id=' + encodeURIComponent(storeId);
    }


</script>

</body>

</html>
